{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "exactOptionalPropertyTypes": true,
        "lib": ["ES2020"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noPropertyAccessFromIndexSignature": true,
        // "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "ts-node": { "esm": true },
    "exclude": ["coverage/", "packages/"],
    "include": ["src/**/*.js"]
}
